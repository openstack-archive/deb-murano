FormatVersion: 2.0.0
Version: 1.0.0
Name: $planName

Parameters:
  command: $command

Body: |
  return runCommand("'{0}'".format(args.command))

Scripts:
  runCommand:
    Type: Application
    Version: 1.0.0
    EntryPoint: runCommand.sh
    Files: []
    Options:
      captureStdout: $captureStdout
      captureStderr: $captureStderr
      verifyExitcode: $verifyExitcode